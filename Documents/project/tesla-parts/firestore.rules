rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow everyone to read, but only authenticated users to write to the 'parts' collection
    match /parts/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow everyone to read and write exchange rates (public data)
    match /exchangeRates/{document} {
      allow read: if true;
      allow write: if true;
    }

    // Allow authenticated users to read and write to any other collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}